<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Admin title TextView -->
    <TextView
        android:id="@+id/admin_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Fleet Management"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <!-- Additional UI elements for fleet management -->
    <Button
        android:id="@+id/add_vehicle_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Vehicle"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/admin_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/remove_vehicle_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove Vehicle"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/add_vehicle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/view_fleet_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Fleet"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/remove_vehicle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>




